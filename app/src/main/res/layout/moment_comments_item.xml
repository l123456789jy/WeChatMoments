<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_moment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <ImageView
        android:id="@+id/iv_moment_avatar"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_moment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/material_on_primary_disabled"
        app:layout_constraintLeft_toRightOf="@+id/iv_moment_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_moment_avatar"
        tools:text="我是昵称" />

    <TextView
        android:id="@+id/tv_moment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toRightOf="@+id/tv_moment_name"
        app:layout_constraintTop_toTopOf="@+id/tv_moment_name"
        tools:text="我是品论内容" />


</androidx.constraintlayout.widget.ConstraintLayout>